# ===========================================
# Hypertube Environment Variables
# ===========================================
# Copy this file to .env and adjust values as needed.
# DO NOT commit the .env file with real secrets.
# ===========================================

# Application
NODE_ENV=development

# API Configuration
PORT=3001

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Note: Port 5433 is used to avoid conflicts with local PostgreSQL installations
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/hypertube?schema=public"

# Docker Compose Postgres settings (used by docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hypertube

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_ACCESS_TTL="15m"
JWT_REFRESH_TTL="7d"

# Frontend URL (for password reset links)
FRONTEND_URL="http://localhost:3000"

# Web Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"


# SMTP Configuration (for password reset emails)
# If not configured, reset links are logged to console only (dev mode)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@hypertube.local"

# OMDB API Key
OMDB_API_KEY="your-omdb-api-key-here"

# 42 OAuth Configuration
FORTYTWO_CLIENT_ID="..."
FORTYTWO_CLIENT_SECRET="..."
FORTYTWO_REDIRECT_URI="http://localhost:3001/auth/42/callback"


# Google OAuth Configuration
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:3001/auth/google/callback"